---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@components/NavBar.astro";
import Footer from "@components/Footer.astro";

const luchadores = [
  { nombre: "May", peso: "Muay Thai", foto: "/rodtang.webp" },
  { nombre: "Rocky", peso: "MMA", foto: "/rodtang.webp" },
];
---

<Layout title="Siam May Xerez | Gimnasio de Muay Thai en Jerez">
  <Navbar />
  <section class="min-h-dvh">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
      {
        luchadores.map((luchador) => (
          <div class="border border-gray-300 rounded-lg p-4 text-center">
            <img
              src={luchador.foto}
              alt={luchador.nombre}
              class="w-full h-auto rounded-lg"
            />
            <h3 class="mt-2 text-lg font-semibold">{luchador.nombre}</h3>
            <p class="text-gray-600">{luchador.peso}</p>
          </div>
        ))
      }
    </div>
  </section>
  <Footer />
</Layout>
