  {
    nombre: "Alvaro 'La Bestia' Grimaldi",
    peso: "Peso Wélter",
    foto: "/grimaldi.webp",
  },
  {
    nombre: "Gonzalo 'Boneless' Rainer",
    peso: "Peso Ligero",
    foto: "/rainer.webp",
  },
  {
    nombre: "Cristóbal 'Ardilla' López",
    peso: "Peso Ligero",
    foto: "/cristobal.webp",
  },
  { nombre: "Nombre 'Apodo' Apellido", peso: "Peso ?", foto: "/user.png" },
  { nombre: "Nombre 'Apodo' Apellido", peso: "Peso ?", foto: "/user.png" },
